            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvLoadingStatus"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

