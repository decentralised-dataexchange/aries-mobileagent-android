<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.igrant.mobileagent">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activty.InitializeActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".qrcode.QrCodeActivity"/>

        <activity android:name=".activty.OfferCertificateActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activty.ExchangeDataActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activty.RequestActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activty.ProposeAndExchangeDataActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>